<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
      		category="org.jcryptool.visual"
            class="org.jcryptool.visual.rainbow.ui.RainbowSignatureView"
            id="org.jcryptool.visual.rainbow.ui"
            icon="icons/view.gif"
            name="%view.name"
            restorable="true">
      </view>
   </extension>
  
     <extension
         point="org.jcryptool.core.operations.visuals">
      <Visual
      		contextHelpId="org.jcryptool.visual.rainbow.rainbowHelp"
            name="%Visual.name"
            viewId="org.jcryptool.visual.rainbow.ui"
            icon="platform:/plugin/org.eclipse.ui/icons/full/eview16/defaultview_misc.png">
      </Visual>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.visual.rainbow.RestartHandler"
            commandId="org.jcryptool.visual.rainbow.restartCommand">
      </handler>
   </extension>
    
    <extension point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.visual.rainbow.RestartHandler"
            commandId="org.jcryptool.visual.rainbow.helpCommand">
      </handler>
   </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.jcryptool.visual.rainbow.restartCommand"
            name="%restart.command.name">
      </command>
      <command
            id="org.jcryptool.visual.rainbow.helpCommand"
            name="%help.command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="$nl$/toc.xml"
            primary="false">
      </toc>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="$nl$/contexts.xml">
      </contexts>
   </extension>
   <extension 
		point="org.eclipse.ui.menus">
			<menuContribution
				locationURI="toolbar:org.jcryptool.visual.rainbow.ui">
			<command commandId="org.jcryptool.visual.rainbow.restartCommand" 
				icon="platform:/plugin/org.jcryptool.core.util/icons/icon_reset.png" 
				style="push">
			</command>
		</menuContribution>
	</extension>
</plugin>
