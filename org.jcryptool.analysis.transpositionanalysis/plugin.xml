<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="%view.name"
            icon="icons/view.gif"
            category="org.jcryptool.analysis"
            class="org.jcryptool.analysis.transpositionanalysis.views.TranspAnalysisView"
            id="org.jcryptool.analysis.transpositionanalysis.views.TranspAnalysisView">
      </view>
   </extension>
   <extension
         point="org.jcryptool.core.operations.analysis">
      <analysis
            contextHelpId="org.jcryptool.analysis.transpositionanalysis.transpositionanalysis"
            name="%analysis.name"
            viewId="org.jcryptool.analysis.transpositionanalysis.views.TranspAnalysisView">
      </analysis>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="$nl$/contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="$nl$/toc.xml"
            primary="false">
      </toc>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.jcryptool.analysis.transpositionanalysis.views.TranspAnalysisView">
         <command
               commandId="org.jcryptool.analysis.transpositionanalysis.restartCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/new_wiz.png"
               style="push"
               tooltip="%restart.command.tooltip">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.jcryptool.analysis.transpositionanalysis.views.TranspAnalysisView">
         <command
               commandId="org.jcryptool.analysis.transpositionanalysis.helpCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/help_contents.png"
               style="push"
               tooltip="%help.command.tooltip">
         </command>
      </menuContribution>

<!--      This is the same Button 
	  <menuContribution
            locationURI="menu:org.jcryptool.analysis.transpositionanalysis.views.TranspAnalysisView">
         <command
               commandId="org.jcryptool.analysis.transpositionanalysis.helpCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/help_contents.png"
               style="push">
         </command>
      </menuContribution>    -->
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.jcryptool.analysis.transpositionanalysis.helpCommand"
            name="%help.command.name">
      </command>
      <command
            id="org.jcryptool.analysis.transpositionanalysis.restartCommand"
            name="%restart.command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.analysis.transpositionanalysis.handler.HelpHandler"
            commandId="org.jcryptool.analysis.transpositionanalysis.helpCommand">
      </handler>
      <handler 
            class="org.jcryptool.analysis.transpositionanalysis.handler.RestartHandler"
            commandId="org.jcryptool.analysis.transpositionanalysis.restartCommand">
      </handler>
   </extension>

</plugin>
