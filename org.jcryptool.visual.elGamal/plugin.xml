<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.jcryptool.visual"
            class="org.jcryptool.visual.elGamal.ui.ElGamalView"
            icon="icons/view.gif"
            id="org.jcryptool.visual.elGamal.view"
            name="%view.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.jcryptool.core.operations.visuals">
      <Visual
      		contextHelpId="org.jcryptool.visual.elGamal.elGamalHelp"
            name="%Visual.name"
            viewId="org.jcryptool.visual.elGamal.view">
      </Visual>
   </extension>

   <extension
         point="org.eclipse.help.toc">
      <toc
            file="$nl$/toc.xml"
            primary="false">
      </toc>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="$nl$/contexts.xml">
      </contexts>
   </extension>

<extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.visual.elGamal.handlers.RestartHandler"
            commandId="org.jcryptool.visual.elGamal.restartCommand">
      </handler>
      <handler
            class="org.jcryptool.visual.elGamal.handlers.HelpHandler"
            commandId="org.jcryptool.visual.elGamal.helpCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.jcryptool.visual.elGamal.restartCommand"
            name="%restart.command.name">
      </command>
      <command
            id="org.jcryptool.visual.elGamal.helpCommand"
            name="%help.command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.jcryptool.visual.elGamal.view">
         <command
               commandId="org.jcryptool.visual.elGamal.restartCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/new_wiz.png"
               style="push">
         </command>
         <command
               commandId="org.jcryptool.visual.elGamal.helpCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/help_contents.png"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.jcryptool.visual.elGamal.view">
         <command
               commandId="org.jcryptool.visual.elGamal.restartCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/new_wiz.png"
               style="push">
         </command>
         <command
               commandId="org.jcryptool.visual.elGamal.helpCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/help_contents.png"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
