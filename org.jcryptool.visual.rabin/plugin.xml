<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.jcryptool.visual"
            class="org.jcryptool.visual.rabin.ui.RabinMainView"
            icon="platform:/plugin/org.eclipse.ui/icons/full/eview16/defaultview_misc.png"
            id="org.jcryptool.visual.rabin.RabinView"
            name="Rabin Cryptosystem"
            restorable="true">
      </view>
   </extension>
   
      <extension
         point="org.jcryptool.core.operations.visuals">
      <Visual
            contextHelpId="org.jcryptool.visual.rabin.view"
            name="Rabin Cryptosystem"
            viewId="org.jcryptool.visual.rabin.RabinView"
            icon="platform:/plugin/org.eclipse.ui/icons/full/eview16/defaultview_misc.png">
      </Visual>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="$nl$/help/toc.xml"
            primary="false">
      </toc>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="$nl$/help/contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.visual.rabin.handlers.RestartHandler"
            commandId="org.jcryptool.visual.rabin.restartCommand">
      </handler>
      <handler
            class="org.jcryptool.visual.rabin.files.HelpHandler"
            commandId="org.jcryptool.visual.rabin.HelpCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.jcryptool.visual.rabin.restartCommand"
            name="%restart.command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.jcryptool.visual.rabin.RabinView">
            <command commandId="org.jcryptool.visual.rabin.restartCommand" 
				icon="platform:/plugin/org.jcryptool.core.util/icons/icon_reset.png" 
				style="push">
			</command>
      </menuContribution>
   </extension>
   
   
</plugin>
