<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="%view.name.0"
            icon="icons/view.gif"
            category="org.jcryptool.visual"
            class="org.jcryptool.visual.huffmanCoding.views.HuffmanCodingView"
            id="org.jcryptool.visual.huffmanCoding.views.HuffmanCodingView">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="$nl$/help/toc.xml"
            primary="false">
      </toc>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="$nl$/help/contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.jcryptool.core.operations.visuals">
      <Visual
            name="%Visual.name.0"
            viewId="org.jcryptool.visual.huffmanCoding.views.HuffmanCodingView">
      </Visual>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.jcryptool.visual.huffmanCoding.command.Restart"
            name="%restart.command.name">
      </command>
      <command
            id="org.jcryptool.visual.huffmanCoding.command.ChangeLayout"
            name="%changeLayout.command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.jcryptool.visual.huffmanCoding.views.HuffmanCodingView">
         <command
               commandId="org.jcryptool.visual.huffmanCoding.command.Restart"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/new_wiz.png"
               style="push">
         </command>
         
         <command
               commandId="org.jcryptool.visual.huffmanCoding.command.ChangeLayout"
               icon="platform:/plugin/org.eclipse.ui/icons/full/obj16/generic_elements.png"
               style="push"    
               tooltip="%changeLayout.command.tooltip">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.visual.huffmanCoding.handlers.RestartHandler"
            commandId="org.jcryptool.visual.huffmanCoding.command.Restart">
      </handler>
      <handler
            class="org.jcryptool.visual.huffmanCoding.handlers.ChangeLayout"
            commandId="org.jcryptool.visual.huffmanCoding.command.ChangeLayout">
      </handler>
   </extension>

</plugin>
