<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.ui.views">
		<view
			category="org.jcryptool.visual"
			class="org.jcryptool.visual.merkletree.MerkleTreeView"
			id="org.jcryptool.visual.merkletree.view"
			name="%visual.name"
			restorable="true">
		</view>
	</extension>
	<extension point="org.jcryptool.core.operations.visuals">
		<Visual
			contextHelpId="org.jcryptool.visual.merkletree.MerkleTreeView"
			name="%visual.name"
			viewId="org.jcryptool.visual.merkletree.view">
		</Visual>
	</extension>
	<extension point="org.eclipse.help.toc">
		<toc
			file="$nl$/toc.xml"
			primary="false">
		</toc>
	</extension>
	<extension point="org.eclipse.help.contexts">
		<contexts file="$nl$/contexts.xml"></contexts>
	</extension>
	<extension point="org.eclipse.ui.handlers">
		<handler
			class="org.jcryptool.visual.merkletree.handlers.RestartHandler"
			commandId="org.jcryptool.visual.merkletree.restartCommand">
		</handler>
	</extension>
	<extension point="org.eclipse.ui.commands">
		<command
			id="org.jcryptool.visual.merkletree.restartCommand"
			name="%restart.command.name">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="toolbar:org.jcryptool.visual.merkletree.view">
			<command
				commandId="org.jcryptool.visual.merkletree.restartCommand"
				icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/new_wiz.gif"
				style="push">
			</command>
		</menuContribution>
	</extension>
</plugin>